{
    "name": "ns-thon-app-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --inspect --max_old_space_size=2560 index.js",
        "start": "node --max_old_space_size=2560 index.js",
        "prod": "pm2 start --max_old_space_size=2560 index.js --watch",
        "pipe-logs": "pino-cloudwatch --aws_access_key_id=$AWS_ACCESS_KEY_ID --aws_secret_access_key=$AWS_SECRET_ACCESS_KEY --aws_region=$AWS_REGION --group=$AWS_CLOUDWATCH_LOG_GROUP",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint ./common && eslint ./modules && eslint ./utils",
        "lint-fix": "eslint ./common --fix && eslint ./modules --fix && eslint ./utils --fix",
        "eslint-check": "eslint --print-config path/to/main.js | eslint-config-prettier-check",
        "precommit": "echo \"Backend: running pre-commit checks\"",
        "debug": "nodemon --inspect index.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@graphql-tools/schema": "^10.0.3",
        "@novel-systems/shared": "file:../shared",
        "@sendgrid/client": "^8.1.3",
        "@sendgrid/mail": "^8.1.3",
        "@stdlib/math": "^0.0.11",
        "apollo-server-core": "^3.13.0",
        "apollo-server-express": "^3.13.0",
        "auth0": "^4.4.0",
        "axios": "^1.7.1",
        "bcrypt": "^5.1.1",
        "bluebird": "^3.7.2",
        "body-parser": "^1.20.2",
        "celebrate": "^12.1.1",
        "cloudinary": "^1.21.0",
        "dataloader": "^2.2.2",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-async-handler": "^1.2.0",
        "express-jwt": "^8.4.1",
        "graphql": "^15.8.0",
        "graphql-redis-subscriptions": "^2.5.0",
        "graphql-scalars": "^1.23.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-type-json": "^0.3.2",
        "graphql-ws": "^5.16.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.4.1",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.45",
        "mongoose-slug-plugin": "^2.1.0",
        "multer": "^1.4.2",
        "multer-gridfs-storage": "^5.0.2",
        "multer-storage-cloudinary": "^2.2.1",
        "pino": "^9.2.0",
        "pino-pretty": "^11.0.0",
        "shortid": "^2.2.16",
        "uuid": "^9.0.1",
        "ws": "^8.17.0",
        "yup": "^0.29.1"
    },
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "devDependencies": {
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "nodemon": "^3.1.0",
        "prettier": "^2.0.5"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.8"
    }
}

{
    "name": "@novel-systems/shared",
    "version": "1.1.45",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "",
        "precommit": "echo \"Shared: running pre-commit checks\" && npm run test"
    },
    "author": "Eino Miettinen",
    "license": "ISC",
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "dependencies": {
        "graphql": "^15.0.0",
        "graphql-scalars": "^1.23.0",
        "lodash": "^4.17.19",
        "mongoose": "^7.6.11",
        "object-path": "^0.11.4",
        "yup": "^1.4.0"
    },
    "devDependencies": {
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^2.0.5"
    }
}
